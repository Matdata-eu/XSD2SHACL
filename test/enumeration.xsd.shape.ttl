@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

<http://example.com/NodeShape/jeans> a sh:NodeShape ;
    sh:name "jeans" ;
    sh:property <http://example.com/PropertyShape/sex>,
        <http://example.com/PropertyShape/size> .

<http://example.com/PropertyShape/sex> a sh:PropertyShape ;
    sh:datatype xsd:string ;
    sh:in ( "male" "female" ) ;
    sh:name "sex" ;
    sh:path <http://example.com/sex> ;
    sh:targetSubjectsOf <http://example.com/sex> .

<http://example.com/PropertyShape/size> a sh:PropertyShape ;
    sh:datatype xsd:string ;
    sh:in ( "small" "medium" "large" ) ;
    sh:name "size" ;
    sh:path <http://example.com/size> .

