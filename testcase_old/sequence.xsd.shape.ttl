@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

<http://example.com/NodeShape/employee> a sh:NodeShape ;
    sh:name "employee" ;
    sh:node <http://example.com/NodeShape/fullpersoninfo> ;
    sh:targetClass <http://example.com/employee> .

<http://example.com/NodeShape/fullpersoninfo> a sh:NodeShape ;
    sh:name "fullpersoninfo" ;
    sh:node <http://example.com/NodeShape/personinfo> ;
    sh:property <http://example.com/PropertyShape/fullpersoninfo/address>,
        <http://example.com/PropertyShape/fullpersoninfo/city>,
        <http://example.com/PropertyShape/fullpersoninfo/country> .

<http://example.com/NodeShape/personinfo> a sh:NodeShape ;
    sh:name "personinfo" ;
    sh:property <http://example.com/PropertyShape/personinfo/firstname>,
        <http://example.com/PropertyShape/personinfo/lastname> .

<http://example.com/PropertyShape/fullpersoninfo/address> a sh:PropertyShape ;
    sh:datatype xsd:string ;
    sh:maxCount 1 ;
    sh:minCount 1 ;
    sh:name "address" ;
    sh:path <http://example.com/address> .

<http://example.com/PropertyShape/fullpersoninfo/city> a sh:PropertyShape ;
    sh:datatype xsd:string ;
    sh:maxCount 1 ;
    sh:minCount 1 ;
    sh:name "city" ;
    sh:path <http://example.com/city> .

<http://example.com/PropertyShape/fullpersoninfo/country> a sh:PropertyShape ;
    sh:datatype xsd:string ;
    sh:maxCount 1 ;
    sh:minCount 1 ;
    sh:name "country" ;
    sh:path <http://example.com/country> .

<http://example.com/PropertyShape/personinfo/firstname> a sh:PropertyShape ;
    sh:datatype xsd:string ;
    sh:maxCount 1 ;
    sh:minCount 1 ;
    sh:name "firstname" ;
    sh:path <http://example.com/firstname> .

<http://example.com/PropertyShape/personinfo/lastname> a sh:PropertyShape ;
    sh:datatype xsd:string ;
    sh:maxCount 1 ;
    sh:minCount 1 ;
    sh:name "lastname" ;
    sh:path <http://example.com/lastname> .

