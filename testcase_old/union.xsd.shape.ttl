@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

<http://example.com/PropertyShape/jeans_size> a sh:PropertyShape ;
    sh:maxCount 1 ;
    sh:minCount 1 ;
    sh:name "jeans_size" ;
    sh:or ( [ sh:datatype xsd:positiveInteger ;
                sh:maxInclusive 42 ] [ sh:datatype xsd:string ;
                sh:in ( "small" "medium" "large" ) ] ) ;
    sh:path <http://example.com/jeans_size> ;
    sh:targetSubjectsOf <http://example.com/jeans_size> .

